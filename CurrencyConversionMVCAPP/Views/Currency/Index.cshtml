                                    <img id="url1" src="https://flagcdn.com/48x36/ad.png" alt="image" />
                                </div>
                                <div class="col-2">
                                    <select style="margin-left:25px" class="destdropdown btn  btn-light border-primary dropdown-menu-sm-right " id="DEST" asp-items="@Model.CurrencyNames" asp-for="@Model.Destination"></select>
                                </div>
                            </div>

                        </div>
                        &nbsp;
                        
                    </div>
                    <div>
                        <div style="margin-top:5%;margin-left:3%" class="row">
                            <div class="col-1"> <h3 id="Sourcename"> </h3></div>
                            <p></p>
                            <div class="col-2"> <h3 id="changeresult" style="width:fit-content"> </h3></div>
                            <div class="col-3"> <h3 id="DestinationName"></h3></div>
                            <div class="col-4"> <h3 id="PrevOp"> </h3></div>
                        </div>
                    </div>
 
            </form>
