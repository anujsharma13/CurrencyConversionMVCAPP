                                    <img id="url" src="https://flagcdn.com/48x36/ad.png" alt="image" />
                                </div>
                                <div class="col-2">
                                    <select style="margin-left:25px" class="sourcedropdown btn  btn-light  border-primary dropdown-menu-sm-right" id="SRC" asp-for="@Model.Source" asp-items="@Model.CurrencyNames"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4 ">
                            <center>
                                <div>
                                    <label> To</label>
                                </div>
                            </center>

