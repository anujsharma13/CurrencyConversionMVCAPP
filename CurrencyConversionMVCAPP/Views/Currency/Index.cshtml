@model CurrencyConversionMVCAPP.Models.Currency
<html>
<head>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">*@


    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="~/css/TableStyle.css" />

    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <style>
        .containergrid {
            display: grid;
            width: 90%;
            grid-template-columns: repeat(auto-fit,minmax(370px,2fr));
        }

        .headcontainer {
            display: grid;
            grid-template-rows: repeat(auto-fit,minmax(200px,1fr));
        }

        .item {
            background-color: white;
            /* padding: 20px 20px 2px 20px;*/
            /*border-radius: 9px;
            box-shadow: 7px 7px 20px rgb(128 128 128);*/
        }

        .item1 {
            background-color: white;
        }

        #topimg {
            background-image: url('../images/img8.jpg');
            background-position: top;
            background-repeat: no-repeat;
            background-size: 100% 65%;
            /* // background-size: 100% 100%;*/
        }

        #ul_top_hypers li {
            display: inline;
        }
    </style>

</head>
<body>
    <div id="topimg">
        <nav class="navbar navbar-expand-lg navbar-light bg-opacity-100" id="ul_top_hypers" style="padding:10px">

            <ul class="navbar-nav">

                <li class="navitem nav-item active ">
                    <a style="color:white" class="nav-link" asp-action="Index" asp-controller="Currency">Home</a>
                </li>
                <li class="navitem nav-item ">
                    <a style="color:white" class="nav-link" asp-action="Index" asp-controller="Currency">Privacy</a>
                </li>
                <li class="navitem nav-item">
                    <a style="color:white" class="nav-link" asp-action="Index" asp-controller="Currency">Features</a>
                </li>
            </ul>
        </nav>
        <h1 style="margin-top:2%" class="heading"> Currency Converter</h1>

        <h1 class="subheading">Check Live Currency Exhange Rates</h1>
        <center>
            <div style="width:100%;height:50%;margin-top:5%">
                <div class="headcontainer">
                    <center>
                        <form>
                            <div class="containergrid wrapper">
                                <div class="item">
                                    <label> Amount </label>
                                    <br />
                                    <input class="form-control border-primary" asp-for="@Model.Amount" id="amount" step="0.0001" type="number" value="1" min="1" max="9e300" style="width:300px;height:30px;margin:3px" />
                                    <span asp-validation-for="@Model.Amount" class="text-danger" ></span>

                                </div>

                                <div class="item">
                                    <label> From</label>
                                    <br />
                                    <img id="url" src="https://flagcdn.com/48x36/ad.png" alt="image" />
                                    <select style="font-size:70%;text-align:left;" class=" btn  btn-light  border-primary dropdown-menu-sm-right" asp-for="@Model.Source" asp-items="@Model.CurrencyNames" id="SRC"></select>

                                </div>
                                <div class="item">
                                    <label> To</label>
                                    <br />
                                    <img id="url1" src="https://flagcdn.com/48x36/ad.png" alt="image" />
                                    <select style="font-size: 70%; text-align: left; " class=" btn  btn-light border-primary " asp-for="@Model.Destination" asp-items="@Model.CurrencyNames" id="DEST"></select>

                                </div>

                                <div class="item" style="margin-top:30px">

                                    <h4 id="Recenttransaction"><b></b></h4>
                                    <h6 id="prevamt" style="overflow: hidden; text-overflow: ellipsis; -o-text-overflow: ellipsis; white-space: nowrap; width: 100%;"></h6>

                                    <h6 id="prevsrc"></h6>
                                    <h6 id="To"></h6>

                                    <h6 id="prevdest"></h6>
                                    <h6 id="prevresult"></h6>
                                </div>
                                <div class="item" style="padding:20px 0px 0px 0px">
                                    <button id="fetchbtn" type="button" style="margin-top:40px" class="btn btn-primary">Get Exchange Rates </button>
                                    <h4 style="margin-top:20px" id="Differencelabel"></h4>
                                    <h6 id="Difference"></h6>
                                </div>
                                <div class="item" style="margin-top:30px">
                                    <h4 id="outputlabel"><b></b></h4>
                                    <h6 id="output"></h6>
                                    <h4 id="onratelabel"></h4>
                                    <h6 id="onrate"></h6>
                                </div>

                            </div>
                        </form>
                    </center>
                    <div>
                        <div class="flip-card" style="margin-top: 20px">
                            <div class="flip-card-inner">
                                <div class="flip-card-front">
                                    <img src="~/images/history.jpg" style="width:fit-content;height:170px;">
                                </div>
                                <div class="flip-card-back">
                                    <center>
                                        <h6>Recent Transactions</h6>
                                        <table id="tab" class="content-table" style="margin-top:2%;text-overflow:ellipsis;overflow:hidden;" onclick="addRowHandlers()">
                                            <thead>
                                                <tr>
                                                    <th>From</th>
                                                    <th>To</th>
                                                    <th>Amount</th>
                                                    <th>Result</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </center>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </center>
    </div>
    <script src="~/js/Script.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800
        });
    </script>
</body>

</html>